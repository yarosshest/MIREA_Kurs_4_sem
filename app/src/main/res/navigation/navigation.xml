<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/findFragment">

    <fragment
        android:id="@+id/findFragment"
        android:name="com.example.mirea_kurs_4_sem.find.FindFragment"
        android:label="fragment_find"
        tools:layout="@layout/fragment_find" >
        <action
            android:id="@+id/action_findFragment_to_productFragment"
            app:destination="@id/productFragment">
            <argument
                android:name="id_film"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.mirea_kurs_4_sem.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" >
        <argument
            android:name="id_film"
            app:argType="integer" />
        <action
            android:id="@+id/action_productFragment_to_findFragment"
            app:destination="@id/findFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendationFragment"
        android:name="com.example.mirea_kurs_4_sem.RecommendationFragment"
        android:label="fragment_recommendation"
        tools:layout="@layout/fragment_recommendation" >
        <action
            android:id="@+id/action_recommendationFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
</navigation>